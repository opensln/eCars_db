@model IEnumerable<FullElectricCars.Models.carDetails>

@{
    ViewBag.Title = "Cars Information";
}

<div id="carsBanner">
    <h1 id="carsTitle">Electric Cars Database</h1>

</div>


<p>
    @Html.ActionLink("Create New", "Create", " ", new { @class = "btn btn-default" })
</p>
<table id="myTable" class="table">
    <colgroup>
        <col span="1" style="width: 10%;"> @*//--Company*@
        <col span="1" style="width: 8%;"> @*//--Model*@
        <col span="1" style="width: 5%;"> @*//--Price*@
        <col span="1" style="width: 5%;"> @*//--MiesPerCharge*@
        <col span="1" style="width: 10%;"> @*//--Image*@
        <col span="1" style="width: 20%;"> @*//--Video*@
        <col span="1" style="width: 2%;">  @*//--Likes*@
        <col span="1" style="width: 2%;">  @*//--LikesThumb*@
        <col span="1" style="width: 40%;"> @*//---CRUD*@
    </colgroup>

    <thead>

        <tr style="text-align:center; background-color: #00004d; color:white;">
            <th>
                Company Name
                @*@Html.DisplayNameFor(model => model.manufacturers.manufacturerName)*@
            </th>
            <th>
                Model
                @*@Html.DisplayNameFor(model => model.model)*@
            </th>
            <th>
                Price
                @*@Html.DisplayNameFor(model => model.price)*@
            </th>
            <th>
                M.P.C.
                @*@Html.DisplayNameFor(model => model.mpc)*@
            </th>
            <th>
                Image
                @*@Html.DisplayNameFor(model => model.image)*@
            </th>
            <th>
                Video
                @*@Html.DisplayNameFor(model => model.video)*@
            </th>
            <th>
                Likes
                @*@Html.DisplayNameFor(model => model.likes)*@
            </th>
            <th>
                Likes Thumb
                @*@Html.DisplayNameFor(model => model.likes)*@
            </th>
            <th>
                Crud Controls
            </th>
        </tr>
    </thead>

    <tbody>


        @foreach (var item in Model)
        {
            <tr id="@item.cid">
                @Html.Action("_Index", new { cid = item.cid })
            </tr>
        }
    </tbody>
</table>





<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>